{
  "name": "angular-spa",
  "version": "0.4.0",
  "description": "Utilities for angular 2 applications backed by generator-spring-spa project",
  "main": "index.js",
  "angular-cli": {},
  "scripts": {
    "clean": "rm -rf dist/",
    "lint": "tslint ./src/**/*.ts -t verbose",
    "lint:fix": "tslint ./src/**/*.ts --fix",
    "test": "karma start ./karma/karma.conf.js",
    "test:ci": "karma start ./karma/karma.conf.js --singleRun=true",
    "test:headless": "karma start ./karma/karma.conf.js --browsers PhantomJS --autoWatch=true --singleRun=false",
    "test:single": "karma start ./karma/karma.conf.js --browsers PhantomJS --singleRun=true",
    "compile": "ngc",
    "watch": "ngc --watch",
    "pree2e": "npm run webdriver:update",
    "e2e": "protractor protractor.config.js --kill-others --success first",
    "webdriver:update": "webdriver-manager update",
    "copyfiles": "cp -rf package.dist.json dist/package.json && cp -rf README.md LICENSE dist",
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/angular-spa.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/angular-spa.umd.min.js",
    "keepVersion": "export version=`json -f package.json version`;json -I -f package.dist.json -e `echo \"this.version='$version'\"`",
    "build": "npm run clean && npm run transpile && npm run package && npm run minify && npm run keepVersion && npm run copyfiles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atende/angular-spa.git"
  },
  "keywords": [
    "angular2",
    "ng2",
    "utils",
    "ui",
    "keycloak",
    "security"
  ],
  "author": "Giovanni Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atende/angular-spa/issues"
  },
  "homepage": "https://github.com/atende/angular-spa#readme",
  "dependencies": {
    "@angular/common": ">=2.0.0 <5.0.0",
    "@angular/core": ">=2.0.0 <5.0.0",
    "@angular/http": ">=2.0.0 <5.0.0",
    "@angular/platform-browser": ">=2.0.0 <5.0.0",
    "@angular/router": ">=2.0.0 <5.0.0",
    "angular-http-interceptor": "^1.0.2",
    "core-js": "^2.4.1",
    "keycloak-js": "^3.1.0",
    "rxjs": ">=5.0.0-beta.12 <6.0.0",
    "zone.js": ">=0.6.26 < 2.0.0"
  },
  "devDependencies": {
    "@angular/compiler": ">=2.0.0 <5.0.0",
    "@angular/compiler-cli": ">=2.0.0 <5.0.0",
    "@angular/platform-browser": ">=2.0.0 <5.0.0",
    "@angular/platform-browser-dynamic": ">=2.0.0 <5.0.0",
    "@ngtools/webpack": "^1.3.3",
    "@types/jasmine": "^2.5.47",
    "@types/node": "^7.0.22",
    "es6-shim": "^0.35.3",
    "html-webpack-plugin": "^2.28.0",
    "jasmine-core": "^2.6.2",
    "json": "^9.0.6",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.31",
    "karma-webpack": "^2.0.3",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "^0.1.10",
    "rollup": "^0.41.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "ts-loader": "^2.1.0",
    "tslint": "^5.3.2",
    "tslint-loader": "^3.5.3",
    "typescript": "~2.3.3",
    "uglify-js": "^3.0.12",
    "webpack": "^2.6.1"
  }
}
